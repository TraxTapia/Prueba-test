
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row text-center p-2">
        <div class="col-lg-12">
            <h2>LLenado de Formulario</h2>
        </div>
    </div>
    <div class="row  p-3">
        <div class="col-lg-12">
            <form id="frmAuto">
                <div class="row">
                    <div class="col-md-12 col-md-12">
                        <div class="col-md-3" style="justify-content:center; font-size:small">
                            <label class="control-label" for="lblMarca" style="font-size:13px;">MARCA </label>
                            <div class="form-group " style="margin:0px;">
                                <select tabindex="4" id="selectMarca" style="padding:0px; font-size:13px;" name="selectMarca" class="form-control  ">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3" style="justify-content:center; font-size:small">
                            <label class="control-label" for="lblSubmarca" style="font-size:13px;">SUBMARCA </label>
                            <div class="form-group " style="margin:0px;">
                                <select tabindex="4" id="selectSubmarca" style="padding:0px; font-size:13px;" name="selectSubmarca" class="form-control  ">
                                    <option value="0">Seleccione</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-md-12">
                        <div class="col-md-3" style="justify-content:center; font-size:small">
                            <label class="control-label" for="lblModelo" style="font-size:13px;">MODELO</label>
                            <div class="form-group  " style="margin:0px;">
                                <select tabindex="4" id="selectModelo" style="padding:0px; font-size:13px;" name="selectModelo" class="form-control  ">
                                    <option value="0">Seleccione</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3" style="justify-content:center; font-size:small">
                            <label class="control-label" for="lblDescripcion" style="font-size:13px;">DESCRIPCION </label>
                            <div class="form-group  " style="margin:0px;">
                                <select tabindex="4" id="selectDescripcion" style="padding:0px; font-size:13px;" name="selectDescripcion" class="form-control  ">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-md-12">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" onclick="$('#frmAuto').submit()" id="btnEnviar" type="button">Enviar</button>

                        </div>

                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/ViewsScript/Home/Index.js"></script>
}


